#!/usr/bin/env ruby

lib = File.join(File.dirname(__FILE__), '..', 'lib')
require File.join(lib, 'pik')

begin
  
  Pik.script = ARGV.shift
  config     = Pik::ConfigFile.new
  
  command = if cmd = Pik::Commands.find(ARGV[0])
    ARGV.shift
    cmd
  elsif ARGV[0] =~ /,/ && cmd = Pik::Commands.find(ARGV[1])
    config.options[:versions] = ARGV.shift
    ARGV.shift
    cmd
  elsif version = config.match(ARGV[0])
    ARGV.shift
    config.options[:use] = version
    Pik::Use
  else
    Pik::Help
  end
  
  cmd = command.new(ARGV, config)
  cmd.execute

rescue Pik::QuitError
  puts "\nQuitting..."
rescue => e
  Pik.print_error(e)
ensure
  cmd.close if cmd
end 
